extends ../shared/template
block content
  h1 Create A New Country
  ul
    li
      span Name
      input#countryName(type=text)
    li
      span Photo
      input#countryPhoto(type=text)
      hr
    button#createCountry Create a New Country

  if countries
    h1 List of Available Countries
      ul#countries
        each country in countries
          li Name: #{country.name}
          each photo in country.photoes
            img.country#countries(src=photo)
            br
          span Balance: #{country.balance}
